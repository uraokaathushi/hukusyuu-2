<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
   </tr>
    <tr>
     <th>follows</th>
     <td><%= link_to user.followings.count, user_followings_path(user) %></td>
    </tr>
    <tr>
    <th>followers</th>
    <td><%= link_to user.followers.count, user_followers_path(user) %></td>
    </tr>
</table>
   <tr>
    <% if current_user != user %>
   <% if current_user.following?(user) %>
   <%= link_to user_relationship_path(user, :user_id), method: :delete, class: "btn btn-info" do %>
   <button class="btn btn-info" >フォロー外す</button>
    <% end %>
  <% else %>
   <%= link_to user_relationships_path(user), method: :post, class: "btn btn-success" do %>
   <button class="btn btn-success">フォローする</button>
    <% end %>
   <% end %>
  <% end %>
   </tr>
<div class='row'>
  <% if current_user == user %>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
  <% end %>
</div>